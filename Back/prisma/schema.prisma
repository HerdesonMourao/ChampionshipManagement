generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int      @id @default(autoincrement())
  name         String
  email        String
  username     String   @unique
  password     String
  avatar       String?
  is_activated Boolean  @default(true)
  created_at   DateTime @default(now()) @map("created_at")
  updated_at   DateTime @updatedAt @map("updated_at")

  Team_Members Team_Members[]
  Tournament Tournament[]

  @@map("user")
}

model Team {
  id           Int      @id @default(autoincrement())
  name         String
  shield_image String?
  abbreviation String
  is_activated Boolean  @default(true)
  created_at   DateTime @default(now()) @map("created_at")
  updated_at   DateTime @updatedAt @map("updated_at")

  Team_Members Team_Members[]

  @@map("team")
}

model Team_Members {
  id           Int      @id @default(autoincrement())
  id_team      Int      @map("id_team")
  id_player    Int      @map("id_player")
  is_captain   Boolean
  is_activated Boolean  @default(true)
  created_at   DateTime @default(now()) @map("created_at")
  updated_at   DateTime @updatedAt @map("updated_at")

  id_teams Team @relation(fields: [id_team], references: [id])
  id_users User @relation(fields: [id_player], references: [id])

  @@map("team_members")
}

model Tournament {
  id           Int      @id @default(autoincrement())
  created_by   Int      @map("created_by")
  name         String
  description  String
  number_teams Int
  awards       Decimal @db.Decimal(65, 2)
  sport        String
  type         String
  is_activated Boolean  @default(true)
  created_at   DateTime @default(now()) @map("created_at")
  updated_at   DateTime @updatedAt @map("updated_at")

  id_users User @relation(fields: [created_by], references: [id])

  @@map("tournament")
}

